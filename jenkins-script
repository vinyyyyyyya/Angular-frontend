pipeline {
  agent none
  stages {
    stage('Front-end') {
      agent {
        docker { image 'node:18-alpine' }
      }
      steps {
        dir('Angular-frontend') {
                    // Install dependencies and build Angular app
                    sh 'rm -rf *'
                    sh 'npm install'
                    sh 'npm run build'
                }
      }
    }
  }
}
