pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
         sh 'npm cache clean --force'
         sh 'npm config set prefix ~/.npm-global'
         sh 'npm install' 
         sh 'npm run build --prod'
      }
    }
  }
}
